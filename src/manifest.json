{
  "manifest_version": 2,

  "name": "Super LCA for Chrome",
  "description": "This extension fetches Super LCA data for products you find on the web",
  "version": "1.0",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "res/favicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", 
    "http://www.amazon.com/*",
    "https://www.amazon.com/*"
  ]
}